<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dark_gray</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">#595959</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="switchStyle">@style/Widget.App.Switch</item>
        <item name="android:colorControlActivated">@color/colorText</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="floatingActionButtonStyle">@style/Widget.App.FloatingActionButton</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog.customised</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dark_gray</item>
        <item name="colorPrimaryDark">@color/darker_gray</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">#595959</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="switchStyle">@style/Widget.App.Switch</item>
        <item name="android:colorControlActivated">@color/colorWhiteText</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="floatingActionButtonStyle">@style/Widget.App.FloatingActionButton</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/dark_gray</item>
        <item name="colorPrimaryDark">@color/darker_gray</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="switchStyle">@style/Widget.App.Switch</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.App.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
    </style>

    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorOnSurface">#000000</item>
        <item name="colorSecondary">#4F4F4F</item>
    </style>

    <style name="SwitchAppTheme" parent="AppTheme">
        <item name="colorAccent">#4F4F4F</item>
        <item name="colorSecondary">#757575</item>
        <item name="colorSurface">#757575</item>
        <item name="android:colorForeground">#BDBDBD</item>
    </style>

    <style name="searchBarView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>

    <style name="Toolbar.TextAppearance" parent="">
        <item name="fontFamily">@font/averia_serif_libre_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">@color/colorToolbarText</item>
    </style>

    <style name="Toolbar.TextAppearance2" parent="">
        <item name="fontFamily">@font/averia_serif_libre_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">@color/colorToolbarText</item>
    </style>

    <style name="ThemeOverlay_App_MaterialAlertDialog" parent="MaterialAlertDialog.MaterialComponents">
        <item name="buttonBarPositiveButtonStyle">@style/Dialog.Warning.Button</item>
    </style>

    <style name="Dialog.Warning.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button.Warning.TextButton</item>
    </style>

    <style name="ThemeOverlay.App.Button.Warning.TextButton" parent="">
        <item name="colorPrimary">@color/colorWarn</item>
    </style>

    <style name="ThemeOverlay_App_MaterialConfirmDialog" parent="MaterialAlertDialog.MaterialComponents">
        <item name="buttonBarPositiveButtonStyle">@style/Dialog.Confirm.Button</item>
    </style>

    <style name="Dialog.Confirm.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button.Confirm.TextButton</item>
    </style>

    <style name="ThemeOverlay.App.Button.Confirm.TextButton" parent="">
        <item name="colorPrimary">@color/colorGreen</item>
    </style>



    <style name="Widget.App.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.FloatingActionButton</item>
    </style>

    <style name="ThemeOverlay.App.FloatingActionButton" parent="">
        <item name="colorSecondary">@color/dark_gray</item>
        <item name="colorOnSecondary">@color/lightYellow</item>
        <item name="colorOnSurface">@color/onLightYellow</item>
    </style>


    <!-- register text field-->
    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="colorPrimary">@color/darker_gray</item>
        <item name="boxBackgroundColor">@color/lighter_gray</item>
        <item name="colorOnSurface">@color/colorWhiteText</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="hintTextColor">@color/colorWhiteText</item>
        <item name="android:textColorHint">@color/colorWhiteText</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.App.Subtitle1</item>
        <item name="textAppearanceCaption">@style/TextAppearance.App.Caption</item>
        <item name="endIconTint">@color/colorWhiteText</item>
    </style>


    <style name="ThemeOverlay.App.TextInputLayout" parent="">
        <item name="colorPrimary">@color/lighter_gray</item>
        <item name="colorOnSurface">@color/colorWhiteText</item>
        <item name="colorError">@color/colorWarn</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.App.Subtitle1</item>
        <item name="textAppearanceCaption">@style/TextAppearance.App.Caption</item>
        <item name="editTextStyle">@style/Widget.App.EditText</item>
        <item name="android:colorControlActivated">@color/colorWhiteText</item>
    </style>


    <style name="Widget.App.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/colorWhiteText</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="TextAppearance.App.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:fontFamily">@font/notosans_tc_medium</item>
    </style>

    <style name="TextAppearance.App.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/notosans_tc_regular</item>
    </style>

    <style name="ThemeOverlay.App.MaterialAlertDialog.customised" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button</item>
        <item name="buttonBarNeutralButtonStyle">@style/Widget.App.Button</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button.TextButton</item>
    </style>

    <style name="ThemeOverlay.App.Button.TextButton" parent="">
        <item name="colorPrimary">@color/colorText</item>
    </style>

</resources>
