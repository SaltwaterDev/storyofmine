<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.unlone.ui.lounge.HomeFragment"
        android:label="@string/lounge"
        tools:layout="@layout/fragment_home" />


    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.unlone.ui.profile.ProfileFragment"
        android:label="@string/profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_navigation_profile_to_savedStoriesFragment"
            app:destination="@id/savedStoriesFragment" />
        <action
            android:id="@+id/action_navigation_profile_to_myStoriesFragment"
            app:destination="@id/myStoriesFragment" />
    </fragment>
    <fragment
        android:id="@+id/myStoriesFragment"
        android:name="com.example.unlone.ui.profile.MyStoriesFragment"
        android:label="fragment_my_stories"
        tools:layout="@layout/fragment_my_stories" >
        <action
            android:id="@+id/action_myStoriesFragment_to_navigation_profile"
            app:destination="@id/navigation_profile"
            app:popUpTo="@id/navigation_profile" />
    </fragment>
    <fragment
        android:id="@+id/savedStoriesFragment"
        android:name="com.example.unlone.ui.profile.SavedPostsFragment"
        android:label="fragment_saved_stories"
        tools:layout="@layout/fragment_saved_posts" >
        <action
            android:id="@+id/action_savedStoriesFragment_to_navigation_profile"
            app:destination="@id/navigation_profile"
            app:popUpTo="@id/navigation_profile" />
    </fragment>


</navigation>