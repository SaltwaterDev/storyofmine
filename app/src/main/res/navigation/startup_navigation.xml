<?xml version="1.0" encoding="utf-8"?>

<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/startup_navigation"
    app:startDestination="@id/loadFragment">
    <fragment
        android:id="@+id/loadFragment"
        android:name="com.unlone.app.ui.access.LoadFragment"
        android:label="LoadFragment">
        <action
            android:id="@+id/action_loadFragment_to_first_access_navigation"
            app:destination="@id/first_access_navigation" />
        <action
            android:id="@+id/action_loadFragment_to_on_boarding_navigation"
            app:destination="@id/on_boarding_navigation" />
    </fragment>

    <include app:graph="@navigation/on_boarding_navigation" />

    <navigation
        android:id="@+id/first_access_navigation"
        app:startDestination="@id/loginFragment">


        <fragment
            android:id="@+id/loginFragment"
            android:name="com.unlone.app.ui.access.LoginFragment"
            android:label="fragment_login"
            tools:layout="@layout/fragment_login">
            <action
                android:id="@+id/action_loginFragment_to_registrationFragment"
                app:destination="@id/registrationFragment" />
            <action
                android:id="@+id/action_loginFragment_to_on_boarding_navigation"
                app:destination="@id/on_boarding_navigation" />
        </fragment>
        <fragment
            android:id="@+id/registrationFragment"
            android:name="com.unlone.app.ui.access.RegistrationFragment"
            android:label="fragment_registration"
            tools:layout="@layout/fragment_registration">
            <action
                android:id="@+id/action_registrationFragment_to_loginFragment"
                app:destination="@id/loginFragment" />
            <action
                android:id="@+id/action_registrationFragment_to_emailVerificationFragment"
                app:destination="@id/emailVerificationFragment" />
        </fragment>
        <fragment
            android:id="@+id/emailVerificationFragment2"
            android:name="com.unlone.app.ui.access.EmailVerificationFragment2"
            android:label="fragment_email_verification2"
            tools:layout="@layout/fragment_email_verification2">
            <action
                android:id="@+id/action_emailVerificationFragment2_to_loginFragment"
                app:destination="@id/loginFragment"
                app:popUpTo="@id/loginFragment"
                app:popUpToInclusive="true" />
        </fragment>

        <fragment
            android:id="@+id/emailVerificationFragment"
            android:name="com.unlone.app.ui.access.EmailVerificationFragment"
            android:label="fragment_email_verification"
            tools:layout="@layout/fragment_email_verification">
            <action
                android:id="@+id/action_emailVerificationFragment_to_emailVerification2"
                app:destination="@id/emailVerificationFragment2" />
        </fragment>
    </navigation>


</navigation>