<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/create_post_navigation"
    app:startDestination="@id/writePostFragment">


    <fragment
        android:id="@+id/writePostFragment"
        android:name="com.unlone.app.ui.create.WritePostFragment"
        android:label="fragment_write_post"
        tools:layout="@layout/fragment_write_post" >
        <action
            android:id="@+id/navigateToConfigFragment"
            app:destination="@id/configFragment" />
        <action
            android:id="@+id/cancel_and_back_to_lounge"
            app:destination="@id/mobile_navigation"
            app:popUpTo="@id/navigation_home"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/configFragment"
        android:name="com.unlone.app.ui.create.ConfigFragment"
        android:label="fragment_config"
        tools:layout="@layout/fragment_config" >
        <action
            android:id="@+id/navigateToWritePostFragment"
            app:destination="@id/writePostFragment" />
        <action
            android:id="@+id/post_create_to_lounge"
            app:destination="@id/mobile_navigation"
            app:popUpTo="@id/navigation_home"
            app:popUpToInclusive="true"/>
    </fragment>
</navigation>