<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewmodel"
            type="com.unlone.app.ui.lounge.category.CategoriesViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
                app:title="@string/topic"
                app:titleCentered="true"
                app:titleTextAppearance="@style/Toolbar.TextAppearance"
                app:titleTextColor="@color/colorToolbarText" />

        </com.google.android.material.appbar.AppBarLayout>

        <TextView
            android:id="@+id/followingTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="14dp"
            android:paddingBottom="10dp"
            android:text="@string/following"
            android:textColor="@color/colorText"
            android:textSize="20sp" />

        <ListView
            android:id="@+id/followingTopicListview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/allTopicTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingHorizontal="14dp"
            android:paddingBottom="10dp"
            android:text="@string/all"
            android:textColor="@color/colorText"
            android:textSize="20sp" />

        <ListView
            android:id="@+id/allTopicListview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</layout>