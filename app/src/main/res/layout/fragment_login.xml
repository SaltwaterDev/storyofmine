<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4D4D4D"
    tools:context=".ui.access.LoginFragment">


    <ImageView
        android:id="@+id/title"
        style="@style/AppTheme"
        android:layout_width="@dimen/_179sdp"
        android:layout_height="@dimen/_124sdp"
        android:fontFamily="@font/averia_serif_libre_bold"
        android:letterSpacing="0.03"
        android:src="@drawable/logo"
        android:textColor="#FFFFFF"
        android:textSize="27sp"
        app:layout_constraintBottom_toTopOf="@+id/email_field"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.93" />

    <LinearLayout
        android:id="@+id/email_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/_34sdp"
        android:layout_marginEnd="@dimen/_34sdp"
        app:layout_constraintBottom_toTopOf="@id/password_field"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/email_text"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_display_bold"
            android:padding="4dp"
            android:text="@string/email"
            android:textAlignment="viewEnd"
            android:textColor="@color/colorWhiteText"
            android:textSize="@dimen/_11ssp"/>

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:backgroundTint="@color/colorWhiteText"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="@color/colorWhiteText" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/password_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_34sdp"
        android:layout_marginEnd="@dimen/_34sdp"
        android:layout_marginBottom="113dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonRegister"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/password_text"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_display_bold"
            android:padding="4dp"
            android:text="@string/password"
            android:textAlignment="viewEnd"
            android:textColor="@color/colorWhiteText"
            android:textSize="@dimen/_11ssp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:backgroundTint="@color/colorWhiteText"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/colorWhiteText" />

    </LinearLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonRegister"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/sf_pro_display_regular"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:text="@string/action_sign_up"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/colorWhiteText"
        android:textSize="18sp"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toTopOf="@+id/progressBar"
        app:layout_constraintEnd_toStartOf="@id/buttonLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/colorWhiteText"
        app:strokeWidth="1dp" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonLogin"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:cornerRadius="15dp"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        app:strokeColor="@color/colorWhiteText"
        app:strokeWidth="1dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/buttonRegister"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAllCaps = "false"
        android:textAlignment="center"
        android:fontFamily="@font/sf_pro_display_regular"
        app:layout_constraintBottom_toTopOf="@+id/progressBar"
        android:textColor="@color/colorWhiteText"
        android:textSize="18sp"
        android:layout_marginBottom="14dp"
        android:text="@string/action_login" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="180dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>