<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.unlone.app.viewmodel.ProfileViewModel" />
    </data>

    <RelativeLayout
        android:id="@+id/fragment_self"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background">

        <LinearLayout
            android:id="@+id/nameRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="36dp"
            android:layout_marginTop="32.35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_text_regular"
                android:text="@{viewModel.username}"
                android:textColor="@color/colorText"
                android:textSize="31sp" />

            <ImageView
                android:id="@+id/editButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="13dp"
                android:background="@null"
                android:contentDescription="edit button"
                android:src="@drawable/ic_baseline_edit_24"
                app:tint="@color/colorText" />

        </LinearLayout>


        <TextView
            android:id="@+id/bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameRow"
            android:layout_marginHorizontal="36dp"
            android:layout_marginTop="13.35dp"
            android:fontFamily="@font/sf_compact_text_regular"
            android:text="@{viewModel.bio}"
            android:textColor="@color/colorText"
            android:textSize="21sp"
            android:visibility="@{viewModel.bioVisibility}" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerviewProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:nestedScrollingEnabled="false"
            app:cardElevation="1dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            tools:listitem="@layout/list_item_profile_card" />


    </RelativeLayout>
</layout>