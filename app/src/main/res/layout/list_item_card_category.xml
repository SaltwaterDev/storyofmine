<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="topic"
            type="String" />

        <import type="android.view.View" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="7.5dp"
        android:layout_marginVertical="5dp"
        android:elevation="0dp"
        android:paddingHorizontal="15dp"
        app:cardCornerRadius="10dp">


        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageCover"
            android:fontFamily="@font/notosans_tc_regular"
            android:gravity="center"
            android:letterSpacing="0.05"
            android:text='@{topic ?? "Topic"}'
            android:textColor="@color/categoryCardTextColor"
            android:textSize="13sp"
            app:layout_constraintTop_toBottomOf="@id/imageCover" />


</com.google.android.material.card.MaterialCardView></layout>