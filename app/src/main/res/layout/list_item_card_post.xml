<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="postUiState"
            type="com.unlone.app.model.PostItemUiState" />

        <import type="android.view.Gravity" />

        <import type="android.view.View" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="30dp"
        android:elevation="5dp"
        android:paddingHorizontal="15dp"
        app:cardBackgroundColor="@color/ColorCardPost"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:id="@+id/imageLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="0dp">

            <ImageView
                android:id="@+id/imageCover"
                postImage="@{postUiState.imagePath}"
                title="@{textViewTitle}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageCover"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="16dp"
                android:fontFamily="@font/notosans_tc_medium"
                android:gravity="@{postUiState.imagePath.isEmpty()? Gravity.START: Gravity.CENTER}"
                android:letterSpacing="0.05"
                android:text='@{postUiState.title ?? "Title"}'
                android:textColor="@color/colorText"
                android:textSize="18sp"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/imageCover" />


            <TextView
                android:id="@+id/textView_journal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewTitle"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/notosans_tc_regular"
                android:letterSpacing="0.1"
                android:lineSpacingMultiplier="1.2"
                android:maxLines="5"
                android:text='@{postUiState.content ?? "content"}'
                android:textColor="@color/colorText"
                android:textSize="14sp"
                android:visibility="@{postUiState.imagePath.isEmpty()? View.VISIBLE: View.GONE}" />

            <ImageSwitcher
                android:id="@+id/expand_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_journal"
                android:visibility="gone"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/ic_baseline_expand_less_24"
                android:clickable="true"
                android:focusable="true" />


            <LinearLayout
                android:id="@+id/commentLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/expand_switch"
                android:orientation="vertical"
                android:visibility="@{postUiState.firstComment != null ? View.VISIBLE: View.GONE}">

                <FrameLayout
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorDivider" />

                <TextView
                    android:id="@+id/commentUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="6dp"
                    android:text='@{postUiState.firstComment.username?? "User"}'
                    android:textColor="@color/colorText"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/commentContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="19dp"
                    android:maxLines="2"
                    android:text="@{postUiState.firstComment.content}"
                    android:textColor="@color/colorText"
                    android:textSize="11sp" />
            </LinearLayout>

        </RelativeLayout>


    </com.google.android.material.card.MaterialCardView>
</layout>