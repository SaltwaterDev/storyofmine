<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="post"
            type="com.unlone.app.model.Post" />

        <variable
            name="category"
            type="String" />
    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="47dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/sf_compact_display_medium"
            android:gravity="bottom"
            android:letterSpacing="0.04"
            android:text="@{post.title ?? @string/title}"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="25sp" />

        <LinearLayout
            android:id="@+id/topicField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewTitle"
            android:layout_marginStart="24dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="24dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/topicTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_text_semibold"
                android:letterSpacing="0.01"
                android:text="@{@string/cate_post_layout(category)}"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/date"
                date="@{post.createdTimestamp}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="0.01"
                android:text="@string/date"
                android:textSize="14sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageCover"
            postImage="@{post.imagePath}"
            android:layout_below="@id/topicField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textViewJournal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageCover"
            android:layout_marginStart="24dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/notosans_tc_regular"
            android:gravity="top"
            android:letterSpacing="0.06"
            android:lineSpacingExtra="10dp"
            android:paddingTop="10dp"
            android:text="@{post.journal ?? @string/journal}"
            android:textColor="@color/colorText"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/labelGroup"
            labels="@{post.labels}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewJournal"
            android:layout_gravity="start"
            android:layout_marginStart="16dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/sf_pro_text_semibold"
            android:letterSpacing="0.01"
            android:textColor="@color/colorText"
            android:textSize="15sp" />

    </RelativeLayout>
</layout>