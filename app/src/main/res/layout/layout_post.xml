<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/sf_compact_display_medium"
        android:gravity="bottom"
        android:letterSpacing="0.04"
        android:text="@string/title"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="24dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/sf_pro_text_semibold"
        android:letterSpacing="0.01"
        android:text="@string/date"
        android:textSize="14sp"/>

    <LinearLayout
        android:id="@+id/topicField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/topicLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="24dp"
            android:layout_marginTop="19dp"
            android:fontFamily="@font/sf_pro_text_bold"
            android:letterSpacing="0.01"
            android:text="@string/topic_label"
            android:textColor="@color/colorText"
            android:textSize="11sp"/>

        <TextView
            android:id="@+id/topicTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="1dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/sf_pro_text_regular"
            android:letterSpacing="0.01"
            android:text="@string/topic"
            android:textColor="@color/colorText"
            android:textSize="11sp"/>

    </LinearLayout>


    <ImageView
        android:id="@+id/imageCover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/textViewJournal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/notosans_tc_regular"
        android:gravity="top"
        android:letterSpacing="0.1"
        android:lineSpacingExtra="10dp"
        android:paddingTop="10dp"
        android:text="@string/journal"
        android:textColor="@color/colorText"
        android:textSize="17sp"/>

    <LinearLayout
        android:id="@+id/labelGroup"
        android:layout_width="match_parent"
        android:layout_marginBottom="98dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"/>

</merge>